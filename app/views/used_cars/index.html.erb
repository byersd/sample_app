<% provide(:title, "Search") %>

<h1>Search</h1>

<div class="row">

  <div class="col-md-offset-3 col-md-6 col-md-offset-3">

    <%= form_for(@used_car , :url => search_path) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :car_num %>
      <%= f.text_field :car_num , class: "form-control" %>

      <%= f.label :car_ref %>
      <%= f.text_field :car_ref , class: "form-control" %>

      <%= f.submit "Search", class: "btn btn-primary" %>

    <% end %>

  </div>

</div>